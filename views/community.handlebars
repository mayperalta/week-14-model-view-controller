<!-- Community Form -->
<div class="tile is-parent is-justify-content-center p-6 m-3">
  <div class="tile is-3 is-child box has-text-centered">
    <p class="title">Share Your Achievements!</p>
    <p class="subtitle p-3 has-text-centered">Connect with fellow fitness enthusiasts and get inspired!</p>
  <!-- Name -->
      <div class="field">
          <label class="label">Name:</label>
          <div class="control has-icons-left has-icons-right">
          <input class="input" type="text" placeholder="Name" id="name">
          </div>
      </div>
  <!-- Date -->
  <div class="field">
    <label class="label">Date:</label>
    <div class="control has-icons-left has-icons-right">
      <input class="input" type="date" id="date" name="trip-start" value="MM/DD/YYYY">
      <span class="icon is-small is-left">
        <i class="fas fa-calendar"></i>
      </span>
    </div>
  </div>
  <!-- Message -->
  <div class="field">
    <label class="label">Message:</label>
    <div class="control">
      <textarea class="textarea" placeholder="Enter your message" id="message"></textarea>
    </div>
  </div>
   <!-- Submit button --> 
      <div class="field is-grouped is-justify-content-center">
        <div class="control">
          <button class="button is-info" id="community-id">Submit</button>
        </div>
      </div>
  </div>
  <!-- Community posts list -->
    <div class="tile is-6 is-child box">
      <p class="title has-text-centered">Community Activity Board ğŸ† </p>
        <article class="message is-warning">
          {{#each communityMap as |community| }}
          <div class="message-header">
          {{community.author}}
          </div>
          <div class="message-body">
          {{community.content}} 
          ({{format_date community.created}})
          </div>
          {{/each}}
        </article>
      </div>
  </div>
  <script src="/js/newcommunity.js"></script>