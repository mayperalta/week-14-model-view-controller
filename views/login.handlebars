<!-- Log in tile section -->
<div class="tile is-ancestor m-6 p-6">
  <div class="tile is-6 is-vertical is-parent">
    <div class="tile is-child box has-text-centered">
      <p class="title">Log in</p>
        <!-- Log in -->
        <div class="field">
          <p class="control has-icons-left has-icons-right">
            <input class="input" type="email" placeholder="Email" id="email-login">
          </p>
        </div>
        <div class="field">
          <p class="control has-icons-left">
            <input class="input" type="password" placeholder="Password" id="password-login">
          </p>
        </div>
        <div class="field">
          <p class="control">
            <button class="button is-success login-form">
              Log in
            </button>
          </p>
        </div>
      </div>
    </div>

<!-- Sign up tile section -->
  <div class="tile is-6 is-vertical is-parent">
    <div class="tile is-child box has-text-centered">
      <p class="title">Sign up</p>
  <!-- Sign up input -->
        <div class="field">
          <div class="control has-icons-left has-icons-right">
            <input class="input" type="text" placeholder="Full Name" id ="name-signup">
          </div>
        </div>
    <!-- Email --> 
        <div class="field">
          <p class="control has-icons-left has-icons-right">
            <input class="input" type="email" placeholder="Email" id = "email-signup">
          </p>
        </div>
    <!-- Password --> 
        <div class="field">
          <p class="control has-icons-left">
            <input class="input" type="password" placeholder="Password"  id = "password-signup">
          </p>
        </div>
    <!-- Goals dropdown menu --> 
        <div class="field">
          <label class="label">What's Your Goal?</label>
          <div class="control">
            <div class="select">
              <select  id = "goal-signup" >
                <option>Select dropdown</option>
                <option>Weightloss</option>
                <option>Build Muscle</option>
                <option>Maintain</option>
              </select>
            </div>
          </div>
        </div>
    <!-- Gender radio --> 
        <div class="field">
            <div class="control">
            <label class="radio">
                <input type="radio" name="question" id = "gender-signup" >
                Male
            </label>
            <label class="radio">
                <input type="radio" name="question" id = "gender-signup">
                Female
            </label>
            </div>
        </div>
     <!-- Submit button --> 
        <div class="field is-grouped is-justify-content-center">
          <div class="control">
            <button class="button is-info signup-form">Submit</button>
          </div>
        </div>
    </div>
  </div>

</div>

<script src="js/login.js"></script>